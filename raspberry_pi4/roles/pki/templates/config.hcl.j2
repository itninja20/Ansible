storage "raft" {
  path    = "{{ vault_data_path }}"
  node_id = "node1"
}

listener "tcp" {
  address     = "{{ ansible_eth0.ipv4.address }}:8200"
  tls_disable = "true"
}

disable_mlock = true

api_addr = "http://{{ ansible_eth0.ipv4.address }}:8200"
cluster_addr = "https://{{ ansible_eth0.ipv4.address }}:8201"
ui = true